<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/addsosettings"
    android:alpha="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informationTextView"
        android:layout_marginBottom="35dp"
        android:text="@string/registering_message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:typeface="normal"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:layout_above="@+id/include2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your BaeCode"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:alpha = "0.8"
        android:phoneNumber="false"
        android:singleLine="true"
        android:textColor="#ffc7e8"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/informationTextView"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Bae&apos;s Code"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:alpha="1"
        android:textColor="#ffb0df"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="113dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:background="@drawable/edittext_bg"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp" />
    <include layout="@layout/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include2" />

</RelativeLayout>